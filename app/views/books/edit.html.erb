<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
<%= render 'layouts/error_messages' %>
  <div class="field">
    <div></div>
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit "Update Book" %>
  </div>
  <%= link_to "Show", book_path(@book.id), {class: "Show"} %>
  |
  <%= link_to "Back", books_path, {class: "Back"} %>
<% end %>