<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset ="UTF-8">

    <title>Bookers</title>
  </head>
  <body>
    <h1>Bookers</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>

    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="action">
        <%= f.submit "Create Book"%>
      </div>
    <% end %>

  </body>
</html>